<AnchorPane style="-fx-background-color: rgba(0, 0, 0, 0.7);"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginDataController">
	<children>
		<BorderPane prefHeight="387.2" prefWidth="384.0">
			<left>
				<Pane prefHeight="200.0" prefWidth="40.0" BorderPane.alignment="CENTER" />
			</left>
			<right>
				<Pane prefHeight="200.0" prefWidth="40.0" BorderPane.alignment="CENTER" />
			</right>
			<center>
				<GridPane BorderPane.alignment="CENTER">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<FlowPane alignment="CENTER" orientation="VERTICAL" prefHeight="53.0" prefWidth="304.0">
							<children>
								<Label alignment="CENTER" style="-fx-font-size: 30px;" text="WELCOME BACK!!" textFill="WHITE">
									<font>
										<Font name="Consolas Bold Italic" size="12.0" />
									</font>
								</Label>
								<Label alignment="CENTER" prefHeight="18.0" prefWidth="239.2" text="We are happy to see you again." textFill="WHITE">
									<font>
										<Font name="Consolas" size="12.0" />
									</font>
								</Label>
							</children>
						</FlowPane>

						<GridPane GridPane.rowIndex="1">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<FlowPane alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="200.0">
									<children>
										<Label text="YOUR EMAIL" textFill="WHITE">
											<font>
												<Font name="Consolas Bold" size="12.0" />
											</font>
										</Label>
										<Label text="*" textFill="RED">
											<font>
												<Font name="Consolas Bold" size="12.0" />
											</font>
										</Label>
										<TextField fx:id="textEmail" prefHeight="35.0" prefWidth="304.0" style="-fx-background-color: White; -fx-background-radius: 15;" />
									</children>
								</FlowPane>
								<FlowPane alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
									<children>
										<Label text="YOUR PASSWORD" textFill="WHITE">
											<font>
												<Font name="Consolas Bold" size="12.0" />
											</font>
										</Label>
										<Label text="*" textFill="RED">
											<font>
												<Font name="Consolas Bold" size="12.0" />
											</font>
										</Label>
										<PasswordField fx:id="textPassword" prefHeight="35.0" prefWidth="304.0" style="-fx-background-color: White; -fx-background-radius: 15;" />
									</children>
								</FlowPane>
							</children>
						</GridPane>

						<GridPane GridPane.rowIndex="2">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<GridPane prefHeight="14.0" prefWidth="304.0">
									<columnConstraints>
										<ColumnConstraints hgrow="SOMETIMES" maxWidth="146.4" minWidth="10.0" prefWidth="127.2" />
										<ColumnConstraints hgrow="SOMETIMES" maxWidth="191.2" minWidth="10.0" prefWidth="177.6" />
									</columnConstraints>
									<rowConstraints>
										<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
									</rowConstraints>
									<children>
										<FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
											<children>
												<CheckBox mnemonicParsing="false" text="REMEMBER ME" textFill="WHITE">
													<font>
														<Font name="Consolas Bold" size="12.0" />
													</font>
												</CheckBox>
											</children>
										</FlowPane>
										<FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
											<children>
												<Label style="-fx-font-size: 8px;" text="FORGOT YOUR PASSWORD?" textFill="#acacac" />
												<Label fx:id="btnForgot" style="-fx-font-size: 8px; -fx-cursor: hand;" text=" Click here" textFill="WHITE" />
											</children>
										</FlowPane>
									</children>
								</GridPane>

								<FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
									<children>
										<Label fx:id="btnLogin" alignment="CENTER" onMouseClicked="#handleLoginClick" prefHeight="35.2"
											prefWidth="304.0" style="-fx-background-color: White; -fx-background-radius: 15; -fx-cursor: hand;" text="LOGIN TO YOUR ACCOUNT" textAlignment="CENTER">
											<font>
												<Font name="Consolas Bold" size="12.0" />
											</font>
										</Label>
									</children>
								</FlowPane>
							</children>
						</GridPane>
					</children>
				</GridPane>
			</center>
		</BorderPane>
	</children>
